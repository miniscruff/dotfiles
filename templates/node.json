{
    "git-packages": [
        {
            "clone": "https://github.com/nvm-sh/nvm.git $HOME/.nvm",
            "path": "$HOME/.nvm"
        }
    ],
    "package-configs": [
        "export NVM_HOME=\"$HOME/.nvm\"",
        "chmod +x $HOME/.nvm/nvm.sh",
        ". $HOME/.nvm/nvm.sh",
        "nvm install node"
    ]
}
