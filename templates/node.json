{
    "git-packages": [
        {
            "clone": "https://github.com/nvm-sh/nvm.git $HOME/.nvm"
        }
    ],
    "package-configs": [
        "export NVM_HOME=\"$HOME/.nvm\"",
        "source $HOME/.nvm/nvm.sh",
        "nvm install node",
        "npm install -g dockerfile-language-server-nodejs"
    ]
}
