{
    "system-packages": [
        "cmake",
        "pkg-config",
        "libfreetype6-dev",
        "libfontconfig1-dev",
        "libxcb-xfixes0-dev",
        "libxkbcommon-dev"
    ],
    "git-packages": [
        {
            "clone": "https://github.com/alacritty/alacritty.git",
            "path": "alacritty",
            "commands": [
                "curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh",
                "source ~/.cargo/env",
                "rustup override set stable",
                "rustup update stable",
                "cargo build --release",
                "sudo tic -xe alacritty,alacritty-direct extra/alacritty.info",
                "cp target/release/alacritty ~/.local/bin"
            ]
        }
    ]
}
