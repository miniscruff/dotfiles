{
    "system-packages": [
        "libssl-dev",
        "zlib1g-dev",
        "libbz2-dev",
        "libreadline-dev",
        "libsqlite3-dev",
        "llvm",
        "libncurses5-dev",
        "libncursesw5-dev",
        "xz-utils",
        "tk-dev",
        "libffi-dev",
        "liblzma-dev",
        "python-openssl"
    ],
    "git-packages": [
        {
            "clone": "https://github.com/pyenv/pyenv.git $HOME/.pyenv"
        }
    ],
    "package-configs": [
        "export PYENV_ROOT=\"$HOME/.pyenv\"",
        "export PATH=\"$PYENV_ROOT/bin:$PATH\"",
        "eval \"$(pyenv init -)\"",
        "pyenv install 3.9.0",
        "pyenv global 3.9.0",
        "python -m pip install --upgrade pip"
    ],
    "post-install": [
        "pip install jedi neovim",
        "pipx install httpie"
    ]
}
