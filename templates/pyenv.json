{
    "system-packages": [
        "libssl-dev",
        "zlib1g-dev",
        "libbz2-dev",
        "libreadline-dev",
        "libsqlite3-dev",
        "llvm",
        "libncurses5-dev",
        "libncursesw5-dev",
        "xz-utils",
        "tk-dev",
        "libffi-dev",
        "liblzma-dev",
        "python3-pip"
    ],
    "git-packages": [
        {
            "clone": "https://github.com/pyenv/pyenv.git $HOME/.pyenv",
            "path": "$HOME/.pyenv"
        }
    ],
    "package-configs": [
        "python3 -m pip install --upgrade pip"
    ],
    "post-install": [
        "pip3 install jedi neovim"
    ]
}
