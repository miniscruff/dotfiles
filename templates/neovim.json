{
    "apt-repositories": [
        "ppa:neovim-ppa/stable"
    ],
    "system-packages": [
        "neovim"
    ],
    "package-configs": [
        "curl -fLo $HOME/.config/nvim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim"
    ],
    "post-install": [
        "nvim --headless +PlugInstall +UpdateRemotePlugins +qa"
    ]
}
